# Server Configuration
PORT=5000
NODE_ENV=development

# Database - Local MongoDB Compass
# Use 127.0.0.1 instead of localhost for better compatibility
MONGODB_URI=mongodb://127.0.0.1:27017/fashion-ecommerce

# For MongoDB Atlas (Cloud), use this format:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fashion-ecommerce

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Razorpay (Test Mode)
RAZORPAY_KEY_ID=rzp_test_dummy_key
RAZORPAY_KEY_SECRET=dummy_secret_key

# Admin Default Credentials
ADMIN_EMAIL=admin@fashionstore.com
ADMIN_PASSWORD=Admin@123

# Cloudinary Configuration (Image Upload)
# Sign up at: https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (Gmail - Free)
# Option 1: Use Gmail with App Password
# 1. Enable 2FA: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character password (no spaces)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-char-app-password

# Option 2: Development Mode - Log OTP to console instead of sending emails
# Set to 'true' to log OTPs to backend console (no SMTP needed)
# Set to 'false' to send actual emails via SMTP
USE_CONSOLE_OTP=true
